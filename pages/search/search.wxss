.search {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  background-color: AliceBlue;
  margin-top: 5%;
  border: 1rpx solid AliceBlue;
  border-radius: 5rpx;
}

/* 搜索框提示文字样式 */

.search input {
  font-size: 40rpx;
  padding-left: 50rpx;
  height: 60rpx;
}

/* 搜索框小图标 */

.search image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 20rpx;
}


