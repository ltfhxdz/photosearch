<view class="item4">
  <view>
    <button bindtap="upload" class="item1">美食照片</button>
  </view>
</view>

<view class="mask" style="{{show?'z-index: 1;opacity:0.7':''}}"></view>
<view class='modalBg' wx:if="{{show}}">
  <view class="modalDlg">
    <view class='title'>
      <text>选择</text>
    </view>
    <view wx:for="{{list}}" wx:key="key" data-index="{{index}}" catchtap="select" id="{{item.id}}">
      <view class="item">
        <image src="{{item.image}}" class="image"  mode='aspectFit' ></image>

        <view class="desc">
          <view>{{item.name}}</view>
          <view class="calorie">
            <view>卡路里：{{item.calorie}}千卡/100克</view>
            <view class="probability">相似度：{{item.probability}}</view>
          </view>
        </view>
      </view>
      <view class="line"></view>
    </view>
    <view>
      <button catchtap="cancel">取消</button>
    </view>

  </view>
</view>


<scroll-view scroll-y="{{isScroll}}" class="item4" style='height:{{windowHeight}}px'>
  <block wx:key="item" wx:for="{{selectList}}">
    <view data-index='{{index}}' class="order-item" bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}rpx">
      <image src="{{item.image}}" class="image"  mode='aspectFit' ></image>
      <view class="desc">
        <view>{{item.name}}</view>
        <view class="calorie">
          <view>卡路里：{{item.calorie}}千卡</view>
          <view class="probability">{{item.gram}}克</view>
        </view>
      </view>

      <view class="remove" bindtap="deleteItem" data-index="{{index}}">删除 </view>
    </view>
    <view class="line"></view>
  </block>
</scroll-view>

<modal hidden="{{hiddenmodalput}}" title="请输入多少克" bindcancel="gramCancel" bindconfirm="gramConfirm">
  <input type='number' placeholder="默认100" name="gram" focus bindinput="gramInput" />
</modal>


<view class="item3">
  <text class="item2">吃美食，还要瘦</text>
</view>