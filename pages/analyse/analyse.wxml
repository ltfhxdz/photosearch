<view class='flex-wrp-row item'>
  <view class='item-left flex-wrp-row'>
    <image src='../images/photo.png' class='icon-left' mode='aspectFit'></image>
    <text decode="{{true}}">&nbsp;&nbsp;{{userInfo.nickName}}</text>
  </view>
</view>

<view class="line"></view>


<picker bindchange="genderMethod" value="{{index}}" range="{{array}}">
  <view class='flex-wrp-row item'>
    <view class='item-left flex-wrp-row'>
      <image src='../images/photo.png' class='icon-left' mode='aspectFit'></image>
      <text decode="{{true}}">&nbsp;&nbsp;性别</text>
    </view>

    <view class='item-right flex-wrp-row'>
      <text decode="{{true}}" wx:if='{{userInfo.gender==1}}'>男&nbsp;&nbsp;</text>
      <text decode="{{true}}" wx:if='{{userInfo.gender!=1}}'>女&nbsp;&nbsp;</text>
      <image src='../images/arrow.jpg' class='icon-right' mode='aspectFit'></image>
    </view>
  </view>

  <view>
    当前选择：{{array[index]}}
  </view>
</picker>

<view class="line"></view>

