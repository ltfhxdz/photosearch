.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: -99999;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.modalBg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

.modalDlg {
  width: 98%;
  min-height: 200rpx;
  max-height: 900rpx;
  position: relative;
  z-index: 9999;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 18px;
  color:black;
}

.upload {
  display: flex;
  flex-direction: row;
  justify-content: center;
  border: 1px solid blue;
}

.item {
  display: flex;
  flex-direction: row;
}

.image {
  width: 66px;
  height: 50px;
}

.desc {
  margin-left: 20px;
  line-height: 30px;
}

.calorie {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999;
}

.probability {
  position: absolute;
  right: 5px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
}

.item1 {
  color: black;
  font-size: 40rpx;
}

.item2 {
  width: 100%;
  margin-top: 5%;
}

.item3 {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: AliceBlue;
  text-align: center;
}

